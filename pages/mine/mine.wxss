/* pages/mine/mine.wxss */
.title{
  width:100%;
  height:88rpx;
  background: #0dc441;
  text-align: center;
  line-height: 88rpx;
  color: white;
}
.item{
  height:148rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 22rpx;
}
.leftpic{
  width: 94rpx;
  height: 94rpx;
}
.right-text{
  flex: 1;
  margin-left: 26rpx;
}
.top{
  display: flex;
  justify-content: space-between;
}
.nickname{
  font-weight: bold;
}
.care{
  margin-right: 30rpx;
}

.nav{
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
}

.nav-title{
  flex: 1;
  text-align: center
}
.active{
  border-bottom: 2px solid #0dc441;
  color:#0dc441; 
}
.imgbox image{
  width: 314rpx;
  height: 317rpx;
}



.footer{
  width:100%;
  height:86rpx;
  position: fixed;
  bottom:0;
  background: white;
  display: flex;
  justify-content: space-around;
}

 .footer navigator{
  display: flex;
  margin-top: 6rpx;
  flex-direction: column;
}
.footer navigator span{
  text-align: center;
}
.icon{
  width:36rpx;
  height:38rpx;
}
.text{
  font-size: 26rpx;
  color: #dddddd;
}
.checked{
  color:#0dc441;
}
.camerabox{
  position: relative;
  width:106rpx;
  height: 106rpx;
}
.camera{
  position: absolute;
  left: 25rpx;
  top: 2rpx;
  width:58rpx;
  height:52rpx;
  z-index: 20;
}
.circle{
  position: absolute;
  left: 0;
  top: -26rpx;
  width:100%;
  height: 106rpx;
} 